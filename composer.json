{
    "name": "neos/event-sourcing",
    "type": "neos-package",
    "description": "Lean and opinionated way to integrate Event Sourcing and CQRS pattern in your Flow framework package",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "neos/flow": "^7.0 || ^8.0 || ^9.0 || dev-master",
        "flowpack/jobqueue-common": "^3.0 || dev-master",
        "symfony/serializer": "^5.1 || ^6.0",
        "symfony/property-access": "^5.1 || ^6.0",
        "ramsey/uuid": "^3.9 || ^4.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Neos\\EventSourcing\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Neos\\EventSourcing\\Tests\\": "Tests"
        }
    },
    "extra": {
        "neos": {
            "package-key": "Neos.EventSourcing"
        }
    }
}
